mode_normal = { fg = "#100F0F", bg = "#E6E4D9", bold = true }
mode_select = { fg = "#100F0F", bg = "#D0A215", bold = true }
mode_unset  = { fg = "#100F0F", bg = "#AF3029", bold = true }

progress_label  = { fg = "#FFFFFF", bold = true }
progress_normal = { fg = "#E6E4D9", bg = "#343331" }
progress_error  = { fg = "#AF3029", bg = "#343331" }

permissions_t = { fg = "#66800B" }
