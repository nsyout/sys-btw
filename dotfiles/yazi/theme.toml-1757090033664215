[filetype]
rules = [
	# Images
	{ mime = "image/*", fg = "#24837B" },
	
	# Videos
	{ mime = "video/*", fg = "#D0A215" },
	{ mime = "audio/*", fg = "#D0A215" },
	
	# Archives
	{ mime = "application/zip",             fg = "#AF3029" },
	{ mime = "application/gzip",            fg = "#AF3029" },
	{ mime = "application/x-tar",           fg = "#AF3029" },
	{ mime = "application/x-bzip",          fg = "#AF3029" },
	{ mime = "application/x-bzip2",         fg = "#AF3029" },
	{ mime = "application/x-7z-compressed", fg = "#AF3029" },
	{ mime = "application/x-rar",           fg = "#AF3029" },
	
	# Documents
	{ mime = "application/pdf", fg = "#AF3029" },
	{ mime = "application/msword", fg = "#4385BE" },
	{ mime = "application/vnd.openxmlformats-officedocument.wordprocessingml.document", fg = "#4385BE" },
	
	# Fallback
	{ name = "*", fg = "#CECDC3" },
	{ name = "*/", fg = "#4385BE" }
]