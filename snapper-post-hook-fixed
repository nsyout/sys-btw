[Trigger]
Operation = Upgrade
Operation = Install  
Operation = Remove
Type = Package
Target = *

[Action]
Description = Creating post-transaction snapshot...
When = PostTransaction
Exec = /bin/bash -c 'if [ -f /tmp/snapper-pre-number ]; then PRE=$(cat /tmp/snapper-pre-number); /usr/bin/snapper -c root create --type post --pre-number "$PRE" --description "pacman post-transaction"; rm /tmp/snapper-pre-number; else /usr/bin/snapper -c root create --type single --description "pacman post-transaction"; fi'
Depends = snapper